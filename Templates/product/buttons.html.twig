<div class="button-group">
    {% if CRUD.Record.id %}
        <input class="btn create" type="submit" value="{% trans 'Save' %}"/>
    {% else %}
        <input class="btn" type="submit" value="{% trans 'Create' %}"/>
    {% endif %}
    <input class="btn" type="button" value="{% trans "Close" %}" onclick=" Region.of(this).fadeRemove();"/>
</div>
